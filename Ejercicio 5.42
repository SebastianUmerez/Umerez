#include <stdio.h>

int main() {
    int n, i;

    printf("Ingrese el nÃºmero n: ");
    scanf("%d", &n);

    // De n hasta 0
    for(i = n; i >= 0; i--) {
        printf("%d ", i);
    }

    // De 1 hasta n (evitamos repetir el 0)
    for(i = 1; i <= n; i++) {
        printf("%d ", i);
    }

    printf("\n");
    return 0;
}
