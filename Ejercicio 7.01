#include <stdio.h>
#define N 4
int main() {
    int i;
    int a[N];
    for(i = 0; i<N; i++){
        printf("ingrese el elemento[%d]: ", i);
        scanf("%d", &a[i]);
    }

    printf("los elementos son: \n");
    for(i=0;i<N;i++){
        if(a[i] < 0) a[i] = a[i] * -1;
        printf("a[%d]: %d \n",i,a[i]);
    }
    return 0;
}
