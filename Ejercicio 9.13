#include <stdio.h>

typedef struct {
    char nombre[30];
    float precio;
    int cantidad;
} producto;

void cargar_producto(producto *p) {
    printf("ingresar el nombre: ");
    scanf("%s",p->nombre);
    printf("ingresar el precio: ");
    scanf("%f",&p->precio);
    printf("ingresar el cantidad: ");
    scanf("%d",&p->cantidad);
}
void imprimir_producto(producto p) {
    printf("\nDatos del producto \n");
    printf("Nombre: %s \n",p.nombre);
    printf("Precio: %.2f \n",p.precio);
    printf("Cantidad: %d \n",p.cantidad);
}
int main() {
    producto prod;
    cargar_producto(&prod);
    imprimir_producto(prod);
    return 0;
} 
