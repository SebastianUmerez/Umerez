#include <stdio.h>

#define CANT_PRODUCTOS 3  // Tama침o del arreglo de productos

// Definici칩n de la estructura producto
typedef struct {
    char nombre[30];
    float precio;
    int cantidad;
} Producto;

// Funci칩n para cargar los productos
void cargar_productos(Producto *p, int tam) {
    for (int i = 0; i < tam; i++) {
        printf("Producto %d\n", i + 1);

        printf("Ingrese el nombre del producto: ");
        scanf(" %[^\n]", (p + i)->nombre); // permite espacios

        do {
            printf("Ingrese el precio del producto: ");
            scanf("%f", &(p + i)->precio);
            if ((p + i)->precio < 0) printf("Error\n");
        } while ((p + i)->precio < 0);

        do {
            printf("Ingrese la cantidad del producto: ");
            scanf("%d", &(p + i)->cantidad);
            if ((p + i)->cantidad < 0) printf("Error\n");
        } while ((p + i)->cantidad < 0);
    }
}

// Funci칩n para imprimir los productos
void imprimir_producto(Producto *p, int tam) {
    printf("\n--- Lista de Productos ---\n");
    for (int i = 0; i < tam; i++) {
        printf("\nProducto %d:\n", i + 1);
        printf("Nombre: %s\n", (p + i)->nombre);
        printf("Precio: %.2f\n", (p + i)->precio);
        printf("Cantidad: %d\n", (p + i)->cantidad);
    }
}

int main(void) {
    Producto prod[CANT_PRODUCTOS];

    // Cargar los productos
    cargar_productos(prod, CANT_PRODUCTOS);

    // Imprimir los productos
    imprimir_producto(prod, CANT_PRODUCTOS);

    return 0;
}
