#include <stdio.h>
struct proveedor {
    char nombre[20];
    int cuit;
};

struct producto{
    char nombre[30];
    float precio;
    struct proveedor pr;
};

int main(){
    struct producto p1[3];
    for(int i = 0; i < 3; i+=1) {
       printf("producto %d \n",i + 1);
       printf("ingresar nombre: ");
       scanf("%s", p1[i].nombre); 
       printf("ingresar precio: ");
       scanf("%f",&p1[i].precio);
    }
}
