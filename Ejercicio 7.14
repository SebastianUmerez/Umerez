#include <stdio.h>
#define N 2
int main() {
    int i, j;
    int A[N][N], B[N][N];

    // Ingresar y sumar matrices en un solo paso
    printf("Ingrese los elementos de la matriz A (3x3):\n");
    for(i = 0; i < N; i++) {
        for(j = 0; j < N; j++) {
            printf("A[%d][%d]: ", i, j);
            scanf("%d", &A[i][j]);
        }
    }

    printf("Ingrese los elementos de la matriz B (3x3):\n");
    for(i = 0; i < N; i++) {
        for(j = 0; j < N; j++) {
            printf("B[%d][%d]: ", i, j);
            scanf("%d", &B[i][j]);
        }
    }

    // Mostrar la matriz suma
    printf("\nLa matriz suma es:\n");
    for(i = 0; i < N; i++) {
        for(j = 0; j < N; j++) {
            printf("%d ",A[i][j] + B[i][j] );
        }
        printf("\n");
    }

    return 0;
}
