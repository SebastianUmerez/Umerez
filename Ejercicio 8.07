#include <stdio.h>
#define TAM 500

// Prototipo de la función
void carga(int a[], int n);

int main(void) {
    int n;
    int arreglo[TAM];

    printf("Ingrese la cantidad de elementos: ");
    scanf("%d", &n);

    // Llamada a la función para cargar los datos
    carga(arreglo, n);

    // Mostrar los elementos cargados
    printf("\nElementos ingresados:\n");
    for(int i = 0; i < n; i++) {
        printf("%d\n", *(arreglo + i));
    }

    return 0;
}

// Definición de la función carga usando punteros
void carga(int a[], int n) {
    int *p;
    for(p = a; p < a + n; p++) {
        printf("Ingrese un elemento: ");
        scanf("%d", p);   // p ya apunta a la posición correcta
    }
}
